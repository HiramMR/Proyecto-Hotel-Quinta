// This is your database configuration

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  password      String    // Hashed password
  phone         String?
  createdAt     DateTime  @default(now())
  reservations  Reservation[]
}

model Room {
  id            String    @id @default(uuid())
  name          String    // e.g. "Suite Presidencial"
  description   String
  price         Int       // Price in cents
  capacity      Int
  imageUrl      String
  reservations  Reservation[]
}

model Reservation {
  id        String   @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  userId    String
  roomId    String
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
}